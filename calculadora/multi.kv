<Gerenciador>:
    Menu: 
        name:'menu'
    Tarefas:
        name: 'colocar_tarefas'
    Outra_tarefa:
        name:'nova'
<Menu>:
    BoxLayout:
        orientation:'vertical'
        padding:100
        spacing:20
        Image:
            source:'logo.png'
            size_hint_y:None
            height:100
            allow_stretch:True
                
        Button:
            text:'Tarefas'
            on_release:
                app.root.current = 'colocar_tarefas'
                root.manager.transition.direction ='up'
        Button:
            text:'Assistente'
            on_release:
                app.root.current = 'nova'
                root.manager.transition.direction ='right'
            
        Button:
            text:'Sair'
            on_release:app.stop()
                    

<Tarefas>
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:' TAREFAS'
                    on_release:app.root.current = 'menu'
                    with_previous: False #seta de voltar
                    
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()
                
                ActionSeparator:

                ActionButton:
                    icon: 'logo.png'
                    on_release:app.root.current = 'menu'
  
        ScrollView:
            BoxLayout:
                id:box
                orientation:'vertical'
                size_hint_y:None
                height:self.minimum_height
        BoxLayout:
            size_hint_y:None
            height:60
            TextInput:
                id:escreve
            Button:
                text:'+'
                size_hint_x:None
                width:60
                on_release:root.addWidget()
            

<Inserir_Tarefa>:
    size_hint_y:None
    height:200
    Label:
        id:label 
        font_size:30
    Button:
        text:'x'
        size_hint_x:None
        width:60
        on_release:app.root.get_screen('colocar_tarefas').ids.box.remove_widget(root)


<Outra_tarefa>
    BoxLayout:
        orientation:'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title:' TAREFAS'
                    on_release:app.root.current = 'menu'
                    with_previous: False #seta de voltar
                    
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()
                
                ActionSeparator:

                ActionButton:
                    icon: 'logo.png'
                    on_release:app.root.current = 'menu'
  
        Button:
            text:'oi'
    
    